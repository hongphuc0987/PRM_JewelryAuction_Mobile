<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/rounded_background">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/product_name_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm: Product Name"
            android:textSize="24sp"
            android:textColor="#333"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/product_description_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm: Description"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:textColor="#555" />

        <!-- Attributes -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/product_color_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màu sắc: Color"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_condition_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tình trạng: Condition"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_sex_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính: Sex"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_size_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kích thước: Size"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_weight_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khối lượng: Weight"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_price_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm: Price"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_starting_price_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá khởi điểm: Starting Price"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_status_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Status"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_created_at_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày tạo: Created At"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_updated_at_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày cập nhật: Updated At"
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_brand_id_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thương hiệu: Brand "
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_category_id_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh mục : Category "
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/product_collection_id_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bộ sưu tập : Collection "
                android:textSize="16sp"
                android:textColor="#5D5757"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- Seller ID -->
        <TextView
            android:id="@+id/seller_id_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người bán: SellerName"
            android:textSize="16sp"
            android:textColor="#5D5757"
            android:layout_marginTop="16dp"
            android:paddingVertical="8dp" />

        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <!-- Edit Button -->
            <Button
                android:id="@+id/edit_product_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sửa sản phẩm"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                android:drawablePadding="8dp"
                android:elevation="4dp" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/delete_product_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xóa sản phẩm"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:padding="12dp"
                android:drawablePadding="8dp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
